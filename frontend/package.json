{
    "name": "frontend",
    "private": true,
    "version": "0.0.0",
    "type": "module",
    "scripts": {
        "dev": "vite",
        "build": "tsc -b && vite build",
        "lint": "eslint .",
        "preview": "vite preview",
        "artifacts": "cp ../contracts/target/ink/inkfundme/inkfundme.json ../frontend/src/assets/inkfundme.json && cp ../contracts/target/ink/token/token.json ../frontend/src/assets/token.json",
        "format": "npx prettier . --write",
        "codegen:token": "npx papi ink add ../contracts/target/ink/token/token.contract",
        "codegen:inkfundme": "npx papi ink add ../contracts/target/ink/inkfundme/inkfundme.contract",
        "codegen": "npm run codegen:token && npm run codegen:inkfundme",
        "postinstall": "npx papi add passetHub -w wss://testnet-passet-hub.polkadot.io"
    },
    "dependencies": {
        "@polkadot-api/descriptors": "file:.papi/descriptors",
        "@polkadot-api/sdk-ink": "^0.4.4",
        "@radix-ui/react-dropdown-menu": "^2.1.16",
        "@radix-ui/react-label": "^2.1.7",
        "@radix-ui/react-progress": "^1.1.7",
        "@radix-ui/react-select": "^2.2.6",
        "@radix-ui/react-separator": "^1.1.7",
        "@radix-ui/react-tabs": "^1.1.13",
        "@radix-ui/react-tooltip": "^1.2.8",
        "@reactive-dot/react": "^0.47.0",
        "@tailwindcss/postcss": "^4.1.13",
        "@tailwindcss/typography": "^0.5.19",
        "class-variance-authority": "^0.7.1",
        "clsx": "^2.1.1",
        "date-fns": "^4.1.0",
        "lucide-react": "^0.544.0",
        "polkadot-api": "^1.17.0",
        "react": "^19.1.1",
        "react-dom": "^19.1.1",
        "react-router-dom": "^7.9.3",
        "sonner": "^2.0.7",
        "tailwind-merge": "^3.3.1",
        "tailwindcss": "^4.1.13",
        "tw-animate-css": "^1.4.0"
    },
    "devDependencies": {
        "@eslint/js": "^9.36.0",
        "@types/react": "^19.1.13",
        "@types/react-dom": "^19.1.9",
        "@vitejs/plugin-react": "^5.0.3",
        "eslint": "^9.36.0",
        "eslint-plugin-react-hooks": "^5.2.0",
        "eslint-plugin-react-refresh": "^0.4.20",
        "globals": "^16.4.0",
        "typescript": "~5.8.3",
        "typescript-eslint": "^8.44.0",
        "vite": "^7.1.7"
    }
}
